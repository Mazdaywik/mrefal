$MODULE Modules;

$IMPORT MError;
$IMPORT MOS;

HomeDir = <MOS::Env 'MR_Home'>;

/**
  <DefaultModulePath> == e.DefaultModulePath
*/
$ENTRY DefaultModulePath = ('.') (<HomeDir>);

$ENTRY Init =
  <CheckDefinedMRHome <HomeDir>>;

CheckDefinedMRHome {
  None = <MError::Fatal 'MR_Home not defined'>;
  e.Path = ;
}

$END Modules.
