$MODULE MEnv;

$IMPORT Refal5;
$IMPORT MR2M-Error;

$ENTRY GetModuleName = <SwGetModuleName <Refal5::Arg 1>>;

SwGetModuleName {
	= <MR2M-Error::Halt 'Command line error. Type r5-2-mref reffile'>;
	e.FileName '.ref' = e.FileName;
	e.Other = <MR2M-Error::Halt 'Command line error. Type reffile name'>;
}

$ENTRY GetOutName = <GetModuleName> '.mref';
$ENTRY GetSrcName = <GetModuleName> '.ref';

$END MEnv.